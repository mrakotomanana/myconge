<%- include('../partials/headers'); %>
<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Inscription</h2>
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="nom">Employe</label>
                <input type="text" class="form-control" name="nom" id="nom" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" required>
            </div>
            <div class="form-group">
                <label for="motDePasse">Mot de passe</label>
                <input type="password" class="form-control" name="motDePasse" id="motDePasse" required>
            </div>
            <div class="form-group">
                <label for="confirmationPass">Confirmation de mot de passe</label>
                <input type="password" class="form-control" name="confirmationPass" id="confirmationPass" required>
            </div>
        
            <div class="form-group">
                <label for="idRole">Role</label>
                <select class="form-control" id="idRole" name="idRole" required>
                    <option value="" disabled selected>Vous êtes admin ou employé ?</option>
                    <option value="employe">Employé</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
        </form>
    </div>
</div>
<%- include('../partials/footer'); %>
